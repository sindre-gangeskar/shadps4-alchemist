{
  "name": "shadps4-alchemist",
  "author": {
    "name": "Sindre Gangeskar",
    "nickname": "Boba Le Thief"
  },
  "description": "A mod manager and games launcher for shadPS4 emulator",
  "version": "0.1.0",
  "main": "public/electron.js",
  "type": "module",
  "homepage": "./",
  "private": true,
  "dependencies": {
    "@iarna/toml": "^2.2.5",
    "@testing-library/jest-dom": "^6.5.0",
    "@testing-library/react": "^16.0.1",
    "@testing-library/user-event": "^14.5.2",
    "concurrently": "^9.0.0",
    "electron-is-dev": "^3.0.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-icons": "^5.3.0",
    "react-router-dom": "^6.26.1",
    "react-scripts": "^5.0.1",
    "shadps4-alchemist": "file:",
    "toml": "^3.0.0",
    "wait-on": "^8.0.0",
    "web-vitals": "^4.2.3",
    "zustand": "^4.5.5"
  },
  "scripts": {
    "start": "cross-env BROWSER=none react-scripts start",
    "react-build": "react-scripts build",
    "build-electron": "electron-builder",
    "electron": "electron .",
    "dev": "concurrently \"npm start\" \"wait-on http://localhost:3000 && npm run electron\"",
    "build": "npm run react-build && npm run build-electron"
  },
  "build": {
    "appId": "com.shadps4-alchemist",
    "productName": "shadPS4 Alchemist",
    "icon": "assets/shadps4_alchemist.ico",
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true,
      "createStartMenuShortcut": true,
      "shortcutName": "shadPS4 Alchemist"
    }
  },
  "eslintConfig": {
    "extends": "react-app",
    "rules": {
      "no-unused-vars": "off",
      "react-hooks/exhaustive-deps": "off"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@babel/plugin-proposal-optional-chaining": "^7.21.0",
    "@babel/plugin-proposal-private-property-in-object": "^7.21.11",
    "cross-env": "^7.0.3",
    "electron": "^32.0.1",
    "electron-builder": "^25.0.5",
    "electron-reload": "^2.0.0-alpha.1"
  }
}